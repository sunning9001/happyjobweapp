<view class='title'>求职意向</view>

<view class="container">
  <view class='row'>
    <i-input class="row" value="{{ value1 }}" title="期望行业" placeholder="行业名称" />
  </view>

  <view class='group row'>
    <view class='label'>期望薪资</view>
    <view class='select'>
      <picker bindchange="bindPickerChange" value="{{sex_index}}" range="{{sex}}">
        <view class="picker">
          {{sex[sex_index]}}
        </view>
      </picker>
    </view>
  </view>

  <view class='group row'>
    <view class='label'>期望地点</view>
    <view class='select'>
      <picker mode="region" bindchange="bindRegionChange" value="{{region}}" custom-item="{{customItem}}">
        <view class="picker">
          {{region[0]}}，{{region[1]}}，{{region[2]}}
        </view>
      </picker>
    </view>
  </view>

</view>

<i-button class="save" bind:click="handleClick" type="info" shape="circle">保存</i-button>