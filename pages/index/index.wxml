<wxs src="../tools.wxs" module="globalTools" />

<view class='app-header'>
  <view class='map' bindtap='toCity'>
    <i-icon type="coordinates_fill" />
    <text>无锡</text>
    <i-icon class="arrow-down" type="play_fill" />
  </view>
  <view class='search' bindtap='toSearch'>
    <i-icon type="search" />
    <text class='search-input'>请输入您要找的职位</text>
  </view>
</view>

<!-- 轮播 -->
<view class="">
  <swiper indicator-dots="true" autoplay="true" interval="3000" duration="500" circular="true" indicator-active-color="#fff">
    <block wx:for="{{imgList}}" wx:key="picUrl">
      <swiper-item>
        <image src="{{item.picUrl}}" class="slide-image" mode='widthFix'/>
      </swiper-item>
    </block>
  </swiper>
</view>

<view class="activity-box">
  <view class="activity">
    <block wx:for="{{activity}}" wx:key="text">
      <view class="activity-item" bindtap='changeList' data-index="{{index}}">
        <image src="{{item.src}}" mode="scaleToFill"></image>
        <text>{{item.text}}</text>
      </view>
    </block>
  </view>
</view>

