<view class='box-body'>
  <view class='box-item' wx:for="{{list}}" wx:key="hpPositionId" bindtap='toDetail' data-id="{{item.hpPositionId}}" hover-class="item-hover">
    
    <view class='box-item-info'>
      <view class='one'>
        <view class='left'>
          <text class='job'>{{item.posName}}</text>
          <text class='fan' wx:if="{{item.reTotalMoney}}">返{{item.reTotalMoney}}元</text>
        </view>
        <view class='salary'>{{item.lowerNum}}-{{item.hightNum}} <text class="danwei">元</text></view>
      </view>
      <view class='two'>
        <view class='commpany'>{{item.comName}}</view>
        <view class='area'>
          <i-icon type="coordinates_fill" />
          <text class='area-name'>{{item.cityName}}-{{item.countyName}}</text>
        </view>
      </view>
      <view class='three'>
        <view class='limit'>
          <block wx:if="{{item.welfareArr}}">
            <i-tag 
              wx:for="{{globalTools.splitStr(item.welfareArr,',')}}" 
              wx:key="*this"
              wx:for-item="tag"
              i-class="tag-class"
              >
              {{tag}}
            </i-tag>
          </block>
        </view>
        <view class='time'>{{globalTools.formatemd(item.startTime)}}</view>
      </view>
    </view>
  </view>
</view>

<button id="kefu" open-type="contact" bindcontact="handleContact" hover-class='kefu-hover'></button>
