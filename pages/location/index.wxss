/* 搜索 */
.search{
  display: flex;
  flex-grow: 1;
  align-items: center;
  height: 70rpx;
  padding: 0 20rpx;
  margin: 0 30rpx;
  background:#f5f5f5;
  border-radius: 35rpx;
  line-height: 70rpx;
  font-size: 28rpx;
  color: #999;
}
.search-icon{
  width: 30rpx;
  height: 30rpx;
}
.search-input{
  flex-grow: 1;
  margin-left: 10rpx;
  color: #333;
}
/* 定位城市 */
.location_city{
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 28rpx;
  margin: 0 25px 0 15px;
}
.btn{
  width: 30%;
  height: 70rpx;
  line-height: 70rpx;
  text-align: center;
  background: #bbbec4;
  color:#fff;
  border-radius: 35rpx;
}
.btn.active{
  background: #2db7f5;
}
.position{
  font-size: 24rpx;
  color: #2db7f5;
}
/* 热门城市 */
.hot_city{
  display: flex;
  justify-content: space-between;
  align-items: center;
  flex-wrap: wrap;
  font-size: 28rpx;
  margin: 0 25px 10px 15px;
}
.hot_city .btn{
  margin-bottom: 5px;
}