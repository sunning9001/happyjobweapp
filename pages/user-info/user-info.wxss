.container{
  margin: 20px;
  border-radius: 8px;
  border: 1px solid #eaeaea;
  overflow: hidden;
}
.title{
  color: #333;
  font-size: 14px;
  margin: 10px 20px 0;
}
/* 信息 */
.group{
  display: flex;
  padding:7px 15px;
  color:#495060;
}
.group .label{
  color:#495060;
  min-width:65px;
  line-height: 1.6;
  padding:4px 0;
  padding-right:10px;
  min-height:22px;
  height:auto;
  font-size:14px;
}
.select{
  flex:1;
  line-height:1.6;
  padding:4px 0;
  min-height:22px;
  height:auto;
  font-size:14px;
}
.row{
  position: relative;
}
.row::after{
  position: absolute;
  bottom: 0;
  left: 0;
  content: "";
  width:100%;
  border-bottom: 1px solid #eaeaea;
}
.row:last-child::after{
  border-bottom: none;
}

/* 按钮 */
.save{
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
}