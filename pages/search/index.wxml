<view class="header">
  <view class='search'>
    <i-icon class="icon-search" type="search" size='24' color='#aaa'/>
    <input class='search-input' confirm-type="search" value="{{inputValue}}" bindinput='bindKeyInput' bindconfirm="toPath" placeholder="请输入您要找的职位" auto-focus/>
  </view>
  <navigator open-type='navigateBack'>
    <view class='cancel'>搜索</view>
  </navigator>
</view>

  <view class='history topic'>
    <view class='topic-header'>
      <view class='history-title'>搜索历史</view>
       <i-icon class='trash' type="trash" size='24' color='#999' bindtap='delHistory' data-id=""/>
    </view>
    <view class='record-list'>
      <view class='record' wx:for="{{historyList}}" wx:key="{{item.hpUserSearchId}}" data-value="{{item.content}}" bindtap='selectMsg' longpress="delHistory" >{{item.content}}</view>
    </view>
  </view>

<block wx:if="{{false}}">
   <view class='search-list'>
    <view class='li' wx:for="{{filterWordList}}" data-value="{{item}}" bindtap='selectMsg'>{{item}}</view>
   </view>
</block>