
<view class="page">
  <view class='title'>
    <image class='icon-box' src='../../images/jianli/icon-box.png' mode='widthFix'></image>
    <text class='card-title'>教育背景</text>
  </view>

  <view class='group'>

    <view class='list'>
      <view class='list-title'>学校名称</view>
      <view class='list-content border'>
        <i-input class="row" value="{{ value1 }}" placeholder="请输入姓名" i-class="input"/>
      </view>
    </view>

    <view class='list'>
      <view class='list-title'>学历</view>
      <view class='list-content border'>
        <picker bindchange="bindPickerChange" value="{{sex_index}}" range="{{sex}}">
          <view class="picker">
            {{sex[sex_index]}}
          </view>
        </picker>
      </view>
    </view>

    <view class='list'>
      <view class='list-title'>学历</view>
      <view class='list-content border'>
        <picker bindchange="bindPickerChange" value="{{sex_index}}" range="{{sex}}">
          <view class="picker">
            {{sex[sex_index]}}
          </view>
        </picker>
      </view>
    </view>

    <view class='list'>
      <view class='list-title'>入学时间</view>
      <view class='list-content border'>
        <picker bindchange="bindPickerChange" value="{{sex_index}}" range="{{sex}}">
          <view class="picker">
            {{sex[sex_index]}}
          </view>
        </picker>
      </view>
    </view>

    <view class='list'>
      <view class='list-title'>毕业时间</view>
      <view class='list-content border'>
        <picker bindchange="bindPickerChange" value="{{sex_index}}" range="{{sex}}">
          <view class="picker">
            {{sex[sex_index]}}
          </view>
        </picker>
      </view>
    </view>

  </view>

  <i-button i-class="radius distance" bind:click="handleClick" type="primary" shape="circle">保存</i-button>

</view>