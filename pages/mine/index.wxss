.panel{
  display: flex;
  justify-content: stretch;
  align-items: center;
  background: #050095;
  padding: 40rpx 30rpx;
  color: #fff;
  font-size: 28rpx;
}
.panel .avatar{
  width: 160rpx;
  height: 160rpx;
}
.panel .person-info{
  height: 100%;
  flex-grow: 1;
  display: flex;
  flex-direction: column;
  margin-left: 20rpx;
}
.panel .person-info .iphone{
  margin-top: 20rpx;
}
.panel .auth{
  font-size: 36rpx;
  margin-right: 20rpx;
}
/* banner */
.banner{
  width: 100%;
}
/* list */
.list .item{
  padding:7px 15px;
  background: #f2f2f2;
  border: 1px solid #fff;
}