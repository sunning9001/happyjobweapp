<wxs src="../tools.wxs" module="globalTools" />

<!-- 轮播 -->
<view class="">
  <swiper indicator-dots="true" autoplay="true" interval="3000" duration="500" circular="true" indicator-active-color="#fff">
    <block wx:for="{{1}}">
      <swiper-item>
        <image src="https://weapp.hap-job.com/uploadFiles/images/pt/pt-banner.jpg" class="slide-image" mode='widthFix'/>
      </swiper-item>
    </block>
  </swiper>
</view>

<view class='box-body mg190' bindtap='toOrderDetail' data-orderid="{{list.ygfOrderId}}">
  <view class='box-item fixedH' wx:for="{{list}}" wx:key="hpPositionId" bindtap='toDetail' data-id="{{item.hpPositionId}}" data-type="{{item.groupOn}}" hover-class="item-hover">
    
    <view class='box-item-info'>
      <view class='one'>
        <view class='left'>
          <text class='job'>{{item.posName}}</text>
          <text class='fan' wx:if="{{item.fiveMoney }}">拼团多返{{item.fiveMoney}}元</text>
        </view>
        <view class='salary'>{{item.lowerNum}}-{{item.hightNum}} <text class="danwei">元</text></view>
      </view>
      <view class='two'>
        <view class='commpany'>{{item.comName}}</view>
        <view class='area'>
          <i-icon type="coordinates_fill" />
          <text class='area-name'>{{item.cityName}}-{{item.countyName}}</text>
        </view>
      </view>
      <view class='three'>
        <view class='limit'>
          <block wx:if="{{item.welfareArr}}">
            <i-tag 
              wx:for="{{globalTools.splitStr(item.welfareArr,',')}}" 
              wx:key="*this"
              wx:for-item="tag"
              i-class="tag-class"
              >
              {{tag}}
            </i-tag>
          </block>
        </view>
        <view class='time'>{{globalTools.formatemd(item.startTime)}}</view>
      </view>
      <view class="four">
        <text class="pt-member">已有<text class="number">{{item.groupSccNum}}</text>人拼团成功</text>
        <text class="endtime">结束时间：{{item.endTime}}</text>
      </view>
    </view>
  </view>
</view>

<view class='myPT'>
  <view class="box" wx:for="{{myList}}" wx:key="hpPositionId" bindtap='toDetail' data-id="{{item.hpPositionId}}" data-type="{{item.groupOn}}">
    <view class='box-body'>
      <view class='box-item'>
        <image class='box-item-img' src='{{item.leaderPic}}' mode='aspectFit'></image>
        <view class='box-item-info'>
          <view class='one'><text class='job'>{{item.posName}}</text><text class='componey'>{{item.comName}}</text></view>
          <view class='three'>
            <view class='limit' wx:if="{{(3-item.groupPartNum)>0}}">还差<text class='number'>{{3-item.groupPartNum}}</text>人成团</view>
            <view class='limit' wx:else>已有<text class='number'>{{item.groupPartNum}}</text>人参团</view>
            <view class='djs'>
              <text>剩余</text>
              <i-count-down
                target="{{item.groupLeftTime}}"
                bindcallback="myLinsterner"
                clear-timer="{{clearTimer}}"
              ></i-count-down>
            </view>
          </view>
        </view>
      </view>
    </view>
  </view>
</view>